@{
  ViewData["Title"] = "Get ready!";
}
<h1>@ViewData["Title"]</h1>


<style>
  .dropbtn {
    background-color: rgb(20, 33, 61);
    color: white;
    padding: 16px;
    font-size: 16px;
    border: none;
    cursor: pointer;
  }

  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    background-color: rgb(252, 163, 17);
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    z-index: 1;
  }

  .dropdown-content a {
    color: rgb(17, 28, 52);
    padding: 12px 16px;
    text-decoration: none;
    display: block;
  }

  .dropdown-content a:hover {
    background-color: rgb(222, 143, 15);
  }

  .dropdown:hover .dropdown-content {
    display: block;
  }

  .dropdown:hover .dropbtn {
    background-color: rgb(17, 28, 52);
  }

  #below-buttons {
    margin-top: 20px;
    /* Add some space between buttons and content */
    padding: 20px;
    background-color: white;
    /* Default background color */
  }
</style>

<div class="dropdown">
  <button class="dropbtn">Exams</button>
  <div class="dropdown-content" id="examList">
    <!-- 
    <a href="#" data-color="green">Biology</a>
    <a href="#" data-color="red">Math</a>
    <a href="#" data-color="blue">Economics</a>
     -->
    <!-- The user creates his own exams -->
  </div>
</div>

<!-- Add Exam Button -->
<button class="dropbtn" onclick="addExam()">Add Exam</button>

<!-- Delete Exam Button -->
<button class="dropbtn" onclick="deleteExam()">Delete Exam</button>

<!-- Display selected exam below -->
<div id="below-buttons">
  <div id="selectedExam" style="display: none;"></div>
</div>

<script>
  var examList = document.getElementById("examList");
  var selectedExam = document.getElementById("selectedExam");

  // Variable to keep track of the selected exam 
  var currentSelectedExam = null;

  function addExam() {
    var examName = prompt("Enter the name of the exam:");
    if (examName) {
      var newExam = document.createElement("a");
      newExam.href = "#";
      newExam.textContent = examName;
      newExam.addEventListener("click", function () {
        // Set the selected exam when clicked
        currentSelectedExam = this;
        displaySelectedExam(currentSelectedExam);
      });
      examList.appendChild(newExam);
    }
  }

  function deleteExam() {
    if (currentSelectedExam) {
      if (confirm("Are you sure you want to delete the selected exam?")) {
        currentSelectedExam.remove();
        clearSelectedExam();
      }
    }
  }

  function getRandomColor() {
    var letters = "0123456789ABCDEF";
    var color = "#";
    for (var i = 0; i < 6; i++) {
      color += letters[Math.floor(Math.random() * 16)];
    }
    return color;
  }

  // Function to display the selected exam below
  function displaySelectedExam(examElement) {
    var selectedOption = examElement.textContent;
    var color = getRandomColor();
    var belowButtons = document.getElementById("below-buttons");

    // Apply the selected color to the background of the area below the buttons
    belowButtons.style.backgroundColor = color;

    // Update the selected exam div
    selectedExam.textContent = "Selected Exam: " + selectedOption;
    selectedExam.style.backgroundColor = color;
    selectedExam.style.display = "block"; // Show the selected option
  }

  // Function to clear the selected exam display
  function clearSelectedExam() {
    var belowButtons = document.getElementById("below-buttons");
    belowButtons.style.backgroundColor = "white"; // Reset the background color
    selectedExam.textContent = "";
    selectedExam.style.display = "none"; // Hide the selected option
    currentSelectedExam = null; // Clear the current selected exam
  }
</script>